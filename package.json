{
  "name": "@naylence/core",
  "version": "0.3.1",
  "type": "module",
  "description": "Naylence Core - TypeScript implementation",
  "author": "Naylence Dev <naylencedev@gmail.com>",
  "license": "Apache-2.0",
  "keywords": [
    "messaging",
    "ai",
    "agents",
    "platform",
    "naylence",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/naylence/naylence-core-ts"
  },
  "bugs": {
    "url": "https://github.com/naylence/naylence-core-ts/issues"
  },
  "homepage": "https://github.com/naylence/naylence-core-ts#readme",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js"
    },
    "./browser": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/browser/index.js",
      "default": "./dist/browser/index.js"
    },
    "./*": {
      "types": "./dist/types/*",
      "import": "./dist/esm/*",
      "default": "./dist/esm/*"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "NOTICE"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:cjs && npm run build:esm && npm run build:browser && npm run fix-source-maps",
    "build:types": "tsc --project tsconfig.types.json --emitDeclarationOnly && node ./scripts/postprocess-types.mjs",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:browser": "rollup -c rollup.config.js",
    "fix-source-maps": "node ./scripts/fix-source-maps.js",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "dev": "tsc --watch --outDir dist/esm",
    "prepublishOnly": "npm run build && npm run test"
  },
  "dependencies": {
    "@naylence/factory": "^0.1.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jest-util": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.5.2",
    "ts-jest": "^29.4.4",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
